        </p>
        <div class="alinea type-2"></div>
        <h3>
            L’équipe {{ project.name }}
        </h3>
        <span>
				Sprinter
			</span>
        <div class="team-member-card">

            <img src="{{ project.author.profilePic }}" alt="photo de profil">
            <h4>
                {{ project.author.surname }} {{ project.author.name }}
            </h4>
            <p>
                {{ project.author.cursus }}
            </p>
            <h4>
                Porteur de projet
            </h4>
            <p>
                {% for job in project.author.jobs %} {{ job }} - {% endfor %}
            </p>


            {% for member in project.members %} {% if member.student != null and member != project.author %}
            <img src="{{ member.profilePic }}" alt="photo de profil">
            <h4>
                {{ pmember.surname }} {{ member.name }}
            </h4>
            <p>
                {{ member.cursus }}
            </p>
            <h4>
                {{ member.job.name }}
            </h4>
            <p>
                {% for job in member.jobs %} {{ job }} - {% endfor %}
            </p>
            {% endif %} {% endfor %}
        </div>
        <div class="alinea type-2"></div>
        <h3>
            Les collab recherchées
        </h3>
        <span>
				Sprinter
			</span>
        <div class="add-request">
            {% for member in project.members %} {% if member.student == null %}
            <input id="toggle-ad" type="checkbox" checked>
            <label for="toggle-ad">
							<div class="card-annonce">
								<div class="header-card">
									<img class="img-card" src="../img/{{ member.job.category }}.png" alt="photo de profil">
									<h4>
										{{ member.job.name }}
									</h4>
								</div>
								<div class="body-card">
									<h4>
										{{ member.type }}
									</h4>
									<p>
										{{ member.retribution }}
									</p>
								</div>
							</div>
						</label>
            <button class="actualiser">
							Actualiser
						</button>
            <div id="expand">
                {% for applicant in member.applicants %}
                <img src="{{applicant.profilePic}}" alt="photo de profil">
                <span>
									En attente depuis
									<br>
									Juillet 2021
								</span>
                <h4>
                    {{ applicant.surname }} {{ applicant.name }}
                </h4>
                <p>
                    {{ applicant.cursus }}
                </p>
                <div class="response">
                    <button class="active">
										Contacter
									</button>
                    <button>
										Accepter
									</button>
                    <button>
										Décliner
									</button>
                </div>
                {% endfor %}
            </div>
            {% endif %} {% endfor %}
        </div>
    </div>
</div>
